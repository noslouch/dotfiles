[user]
    name="Brian Whitton"
    email = brian.whitton@wsj.com
    signingkey = /Users/brianwhitton/.ssh/id_ed25519.pub

[push]
    default = current

[core]
    editor = vim
    excludesfile = ~/.gitignore

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = red
    local = yellow
    remote = blue

[color "diff"]
    meta = magenta bold
    frag = magenta bold
    plain = 246
    old = red bold
    new = 154 bold

[color "status"]
    header = 255
    added = green bold
    updated = green bold
    changed = yellow bold
    untracked = red bold

[color "decorate"]
    remoteBranch = 45
    branch = yellow

[alias]
    aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ => \\2/' | sort
    ci=commit
    st=status
    pu=pull
    ps=push
    co=checkout
    hist = log --pretty=format:\"%C(yellow)%h %Cgreen%ad %C(yellow)%ae%Creset %s%C(red)%d%Creset\" --graph --date=relative
    lg = log --decorate --oneline
    update = !git fetch origin && git rebase origin/master
    squash = !git rebase -i origin/master
    sprev = !git push origin HEAD:refs/for/master
    cleanup = !git remote prune origin && git gc && git clean -dfx && git stash clear
    rmbranch = !sh -c 'git branch -D $1 && git push origin :$1' -
    who = shortlog -n -s --no-merges
    setup = !git init && git add . && git commit -m \"initial commit\"
    ignore=!([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore
    stageup = !git push staging staging:master
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	  yester = log --since=yesterday.midnight --author='Brian Whitton'
[oh-my-zsh]
	  hide-status = 1
    hide-dirty = 1
[merge]
    conflictstyle = diff3
[url "https://"]
    insteadOf = git://
[init]
    defaultBranch = main
[pull]
    ff = only
[commit]
    gpgsign = true
[gpg]
    format = ssh
